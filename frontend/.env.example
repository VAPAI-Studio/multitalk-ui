# ==============================================
# MultiTalk UI Frontend Configuration
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# API CONFIGURATION
# ==============================================
VITE_API_BASE_URL=http://localhost:8000/api

# ==============================================
# APPLICATION SETTINGS
# ==============================================
VITE_APP_NAME=MultiTalk UI
VITE_APP_VERSION=1.0.0

# ==============================================
# FEATURE FLAGS
# ==============================================
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false

# ==============================================
# UPLOAD SETTINGS
# ==============================================
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_SUPPORTED_IMAGE_FORMATS=image/jpeg,image/png,image/webp,image/gif

# ==============================================
# UI CONFIGURATION
# ==============================================
VITE_ITEMS_PER_PAGE=20
VITE_MAX_ITEMS_PER_PAGE=100

# ==============================================
# EXTERNAL SERVICES (if needed in frontend)
# ==============================================
# VITE_ANALYTICS_ID=your-analytics-id-here
# VITE_SENTRY_DSN=your-sentry-dsn-here
